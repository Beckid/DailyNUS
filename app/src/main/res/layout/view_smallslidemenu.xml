<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="128dp"
    android:layout_height="48dp"
    android:elevation="30dp">

    <LinearLayout
        android:id="@+id/view_layout"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:background="@drawable/bg_view_smallslidemenu"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/view_delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/selector_view_smallslidemenu_button"
            android:src="@drawable/ic_delete_black_24dp"
             />

        <ImageView
            android:id="@+id/view_clear"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/selector_view_smallslidemenu_button"
            android:src="@drawable/ic_clear_all_black_24dp" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/shape_circle_normal_32x32"
            android:visibility="invisible" />

    </LinearLayout>

    <TextView
        android:id="@+id/view_menu_under"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text=""
        android:textSize="20sp"

        android:background="@drawable/selector_view_smallslidemenu_menu" />

    <ImageView
        android:id="@+id/view_menu"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:background="@drawable/selector_view_smallslidemenu_menu"
        android:src="@drawable/ic_close_black_24dp" />

</RelativeLayout>
